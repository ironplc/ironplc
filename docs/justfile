set windows-shell := ["powershell.exe", "-c"]

default: compile

ci: setup compile

setup:
  pip3 install furo sphinx-inline-tabs sphinx-copybutton pytz

compile:
  sphinx-build -W -n -b html . _build
  echo "www.ironplc.com" > _build/CNAME

# Sets the version number for this component.
version version:
  echo "{{version}}" > VERSION
