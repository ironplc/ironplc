{
    "comments": {
        "blockComment": ["<!--", "-->"]
    },
    "brackets": [
        ["<", ">"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "<", "close": ">", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "'", "close": "'", "notIn": ["string"] },
        { "open": "[", "close": "]", "notIn": ["string", "comment"] },
        { "open": "(", "close": ")", "notIn": ["string", "comment"] },
        { "open": "<!--", "close": "-->", "notIn": ["string"] },
        { "open": "<![CDATA[", "close": "]]>", "notIn": ["string", "comment"] }
    ],
    "colorizedBracketPairs": [
        ["(", ")"],
        ["[", "]"]
    ],
    "surroundingPairs": [
        ["<", ">"],
        ["\"", "\""],
        ["'", "'"],
        ["[", "]"],
        ["(", ")"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*<(?!\\?|!--|!\\[CDATA\\[|/)[^/>]*>\\s*$",
            "end": "^\\s*</[^>]+>\\s*$"
        }
    },
    "wordPattern": "[a-zA-Z_][a-zA-Z0-9_\\-\\.]*"
}
