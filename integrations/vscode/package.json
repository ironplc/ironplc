{
  "name": "ironplc",
  "displayName": "IronPLC",
  "publisher": "ironplc",
  "description": "IronPLC is the beginning of a development environment for IEC 61131-3.",
  "version": "0.158.0",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.75.0",
    "node": ">=22.0.0"
  },
  "license": "MIT",
  "author": {
    "name": "Garret Fick"
  },
  "categories": [
    "Programming Languages"
  ],
  "homepage": "https://www.ironplc.com",
  "repository": {
    "type": "git",
    "url": "http://github.com/ironplc/ironplc.git",
    "directory": "integrations/vscode"
  },
  "activationEvents": [
    "onCustomEditor:ironplc.iplcViewer",
    "onLanguage:61131-3-st",
    "onLanguage:twincat-pou",
    "onLanguage:twincat-gvl",
    "onLanguage:twincat-dut",
    "onLanguage:plcopen-xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ironplc.createNewStructuredTextFile",
        "title": "New Structured Text File",
        "shortTitle": "Structured Text File",
        "category": "IronPLC"
      }
    ],
    "menus": {
      "file/newFile": [
        {
          "command": "ironplc.createNewStructuredTextFile",
          "group": "file",
          "when": "!virtualWorkspace"
        }
      ]
    },
    "configuration": {
      "title": "IronPLC",
      "properties": {
        "ironplc.path": {
          "markdownDescription": "Overrides the discovery of ironplcc application (ironplcc.exe on Windows). If empty, then discovers IronPLC based on the path variable.",
          "type": "string",
          "default": "",
          "editPresentation": "singlelineText"
        },
        "ironplc.logLevel": {
          "markdownDescription": "Log level for the IronPLC compiler.",
          "type": "string",
          "default": "ERROR",
          "enum": [
            "ERROR",
            "WARN",
            "INFO",
            "DEBUG",
            "TRACE"
          ]
        },
        "ironplc.logFile": {
          "markdownDescription": "Log file for the IronPLC compiler.",
          "type": "string",
          "default": "",
          "editPresentation": "singlelineText"
        }
      }
    },
    "languages": [
      {
        "id": "61131-3-st",
        "aliases": [
          "IEC 61131-3",
          "Structured Text"
        ],
        "extensions": [
          ".st",
          ".iec"
        ],
        "configuration": "./decl/61131-3-st-language-configuration.json"
      },
      {
        "id": "twincat-pou",
        "aliases": [
          "TwinCAT POU"
        ],
        "extensions": [
          ".TcPOU"
        ],
        "configuration": "./decl/61131-3-st-language-configuration.json"
      },
      {
        "id": "twincat-gvl",
        "aliases": [
          "TwinCAT GVL"
        ],
        "extensions": [
          ".TcGVL"
        ],
        "configuration": "./decl/61131-3-st-language-configuration.json"
      },
      {
        "id": "twincat-dut",
        "aliases": [
          "TwinCAT DUT"
        ],
        "extensions": [
          ".TcDUT"
        ],
        "configuration": "./decl/61131-3-st-language-configuration.json"
      },
      {
        "id": "plcopen-xml",
        "aliases": [
          "PLCopen XML",
          "IEC 61131-3 XML",
          "TC6 XML"
        ],
        "extensions": [],
        "firstLine": "^<\\?xml[^>]*\\?>\\s*(<project\\s+xmlns\\s*=\\s*[\"']http://www\\.plcopen\\.org/xml/tc6|<project\\s[^>]*xmlns\\s*=\\s*[\"']http://www\\.plcopen\\.org/xml/tc6)",
        "configuration": "./decl/plcopen-xml-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "61131-3-st",
        "scopeName": "source.61131-3-st",
        "path": "./syntaxes/61131-3-st.tmLanguage.json"
      },
      {
        "language": "plcopen-xml",
        "scopeName": "source.plcopen-xml",
        "path": "./syntaxes/plcopen-xml.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.st": "61131-3-st"
        }
      },
      {
        "language": "twincat-pou",
        "scopeName": "source.plcopen-xml",
        "path": "./syntaxes/plcopen-xml.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.st": "61131-3-st"
        }
      },
      {
        "language": "twincat-gvl",
        "scopeName": "source.plcopen-xml",
        "path": "./syntaxes/plcopen-xml.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.st": "61131-3-st"
        }
      },
      {
        "language": "twincat-dut",
        "scopeName": "source.plcopen-xml",
        "path": "./syntaxes/plcopen-xml.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.st": "61131-3-st"
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "ironplc.iplcViewer",
        "displayName": "IPLC Bytecode Viewer",
        "selector": [
          {
            "filenamePattern": "*.iplc"
          }
        ],
        "priority": "default"
      }
    ],
    "taskDefinitions": [
      {
        "type": "ironplc",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The IronPLC task to perform.",
            "enum": [
              "compile"
            ]
          }
        }
      }
    ]
  },
  "scripts": {
    "generate-problems": "node scripts/generate-problems.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "npm run generate-problems && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "precompile": "npm run generate-problems",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "validate-grammars": "ajv validate -s schemas/tmlanguage.json -d \"syntaxes/*.tmLanguage.json\"",
    "lint": "eslint src/**/*.ts && npm run validate-grammars",
    "test:unit": "c8 --check-coverage --lines 80 --include 'out/*.js' mocha --ui tdd 'out/test/unit/**/*.test.js'",
    "test:functional": "node ./out/test/functional/runTest.js",
    "test:grammar": "vscode-tmgrammar-snap -s source.plcopen-xml \"tests/grammar/snap/**/*.xml\" && vscode-tmgrammar-snap \"tests/grammar/snap/**/*.st\" && vscode-tmgrammar-snap \"tests/grammar/snap/**/*.TcPOU\" && vscode-tmgrammar-snap \"tests/grammar/snap/**/*.TcGVL\" && vscode-tmgrammar-snap \"tests/grammar/snap/**/*.TcDUT\"",
    "test:grammar:update": "vscode-tmgrammar-snap -u -s source.plcopen-xml \"tests/grammar/snap/**/*.xml\" && vscode-tmgrammar-snap -u \"tests/grammar/snap/**/*.st\" && vscode-tmgrammar-snap -u \"tests/grammar/snap/**/*.TcPOU\" && vscode-tmgrammar-snap -u \"tests/grammar/snap/**/*.TcGVL\" && vscode-tmgrammar-snap -u \"tests/grammar/snap/**/*.TcDUT\"",
    "check-invariants": "node out/test/checkInvariants.js"
  },
  "devDependencies": {
    "vscode-tmgrammar-test": "^0.1.3",
    "ajv-cli": "^5",
    "@stylistic/eslint-plugin": "^5",
    "@stylistic/eslint-plugin-ts": "^4",
    "@types/mocha": "^10.0.0",
    "@types/node": "22.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-electron": "^2.2.3",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "glob": "^11.0.0",
    "c8": "^10.0.0",
    "mocha": "^11.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "vscode-languageclient": "^9"
  }
}
